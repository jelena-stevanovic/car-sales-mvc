@model CarsSelling.ViewModel.CreateCarViewModel
@{
    ViewData["Title"] = @localizer["AddCar"];
}

<div asp-validation-summary="All"></div>
<form asp-action="AddCar" enctype="multipart/form-data" role="form" method="post">
    <div class="form-group col-md-6">
        <label asp-for="car.MakeId" class="control-label"></label>
        <select asp-for="car.MakeId" asp-items="Model.Makes" class="custom-select">
        </select>
        <span asp-validation-for="car.MakeId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="car.Model" class="control-label"></label>
        <div>
            <input asp-for="car.Model" class="form-control">
            <span asp-validation-for="car.Model" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.ImageFile"></label>
        <div class="input-group">
            <div class="custom-file">
                <input asp-for="@Model.ImageFile" class="custom-file-input" type="file" validation accept="image/*">
                <label asp-for="@Model.ImageFile" class="custom-file-label">Choose file</label>
            </div>
        </div>
        <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.Year" class="control-label"></label>
        <div>
            <input asp-for="@Model.Year" class="form-control">
            <span asp-validation-for="@Model.Year" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.Price" class="control-label"></label>
        <div>
            <input asp-for="@Model.Price" class="form-control">
            <span asp-validation-for="@Model.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.Power" class="control-label"></label>
        <div>
            <input asp-for="@Model.Power" class="form-control">
            <span asp-validation-for="@Model.Power" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="car.Description" class="control-label"></label>
        <textarea class="form-control purple-border" asp-for="car.Description" rows="5"></textarea>
        <span asp-validation-for="car.Description" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.Displacement" class="control-label"></label>
        <div>
            <input asp-for="@Model.Displacement" class="form-control">
            <span asp-validation-for="@Model.Displacement" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="car.Contact" class="control-label"></label>
        <div>
            <input asp-for="car.Contact" class="form-control">
            <span asp-validation-for="car.Contact" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="car.FuelTypeId"></label>
        <select asp-for="car.FuelTypeId" asp-items="Model.FuelTypes" class="custom-select">
        </select>
        <span asp-validation-for="car.FuelTypeId" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="car.BodyTypeId"></label>
        <select asp-for="car.BodyTypeId" asp-items="Model.BodyTypes" class="custom-select">
        </select>
        <span asp-validation-for="car.BodyTypeId" class="text-danger"></span>
    </div>
    <div class="ml-3">
        <button type="submit" class="btn btn-primary">@localizer["AddCar"]</button>
    </div>
</form>
